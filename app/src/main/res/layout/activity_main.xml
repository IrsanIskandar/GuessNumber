<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TxtviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Menebak Angka terkecil atau Terbesar"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/TxtviewResult"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/TxtviewTitle"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="61dp"
        android:text="Masukan Angka dari 1 sampai 100"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/BtnGuess"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="224dp"
        android:background="@color/colorAccent"
        android:text="Guess" />

    <Button
        android:id="@+id/BtnReset"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/BtnGuess"
        android:layout_marginEnd="18dp"
        android:background="@color/colorPrimaryDark"
        android:text="Reset" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inpuLayoutNumber"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="116dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="109dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/EdtInputNumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="Masukan Angka.."
            android:inputType="number"
            android:textColorHint="@color/colorAccent" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>